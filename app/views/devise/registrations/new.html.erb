
  <body class="h-100">

    <div class="display">
      <%= render "shared/background" %>
      <div class="form-container">
        <%= image_tag("QuickQuizz.png", alt: "LOGO", class: "logo-image") %>
        <h2>Sign up</h2>
        <section class="sign-up-box">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          label: false,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", placeholder: "Email" } %>
              <%= f.input :password,
                          label: false,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", placeholder: "Password" } %>
              <%= f.input :password_confirmation,
                          label: false,
                          required: true,
                          input_html: { autocomplete: "new-password", placeholder: "Confirm Password" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign up" %>
            </div>
          <% end %>
        </section>
      </div>
    </div>

  </body>
