<div class="page-container">
  <p class="home-title">Your Quizzes</p>
  <div class="card-basic">
      <div class="quizzes-donuts">
        <% @quiz_results.first(10).each do |result| %>
          <div class="quiz-donut-with-name">
            <div class="donut-home" style="--progress: <%= result.result %>%;">
              <div class="donut__gap-home"><%= result.result.to_i * 10 %>%</div>
            </div>
            <%= link_to result.quiz.title, quiz_path(result.quiz), class: "donut-text" %>
          </div>
        <% end %>
      </div>
      <%= link_to quizzes_path, class: "wide-button centered-button" do %>
        Quiz List
      <% end %>
  </div>

  <!-- TODO: FEED -->

  <div class="quizlist-container">
    <p class="feed-title">Quick Qizz Events Feed</p>
      <div>
        <% @quiz_highscores.each do |quiz_result| %>
          <div class="card-basic">
            <p>Congratulations to <%= quiz_result.user.username %> for scoring <%= quiz_result.result %>%
               in their "<%= quiz_result.quiz.title %>" quiz!</p>
          </div>
        <% end %>
        </div>


    <div class="event-card">
      Michael Bubble <br/>
      Broke a new record on a quiz about apples
      <div class="like-comment">
        Like  Comment
      </div>
    </div>

    <div class="card-basic">
      Sergio Alonso <br/>
      Created a new quiz for types of antibiotics. Check it out!
      <div class="like-comment">
        Like  Comment
      </div>
    </div>

    <div class="card-basic">
      Natasha Brian <br/>
      Scored at 80% on a quiz about having a baby
      <div class="like-comment">
        Like  Comment
      </div>
    </div>
  </div>
  <!-- TODO: FEED -->
</div>
