<div class="page-container">
  <h1 class="medium-text">My Quiz List</h1>
  <% @my_quizzes.each_with_index do |(quiz, highest_result), index| %>
    <% condition = @recently_created && index == 0 %>
    <div class="quiz-card <%= condition ? 'new_quiz_background' : '' %>">
      <%= link_to quiz_path(quiz), class: "no-underline" do %>
        <div class="quiz-content">
          <div>
            <div class="text">
              <h3><%= quiz.title %></h3>
            </div>
            <div class="icon">
              <%= link_to quiz_path(quiz), class: "no-underline", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this quizz?" } do %>
                <i class="fa-regular fa-circle-xmark fa-lg" style="color: #e50b0b;"></i>
              <% end %>
            </div>
          </div>
          <% if quiz.quiz_results.exists? %>
            <div class="donut" style="--progress: <%= highest_result*100 %>%;">
              <div class="donut__gap">
                <h2 class="quizzes-percentage">
                  <%= (highest_result*100).to_i %> %
                </h2>
              </div>
            </div>
          <% else %>
            <div class="donut" style="--progress: 0%;">
              <div class="donut__gap">
                <h2 class="quizzes-percentage">
                  0 %
                </h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
