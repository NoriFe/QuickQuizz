<div class="page-container">
  <div class="profile-info">
    <h2 class="m-0 p-0 large-text">Create New Quiz</h2>
  </div>
  <div class="quiz-form">
    <%= simple_form_for @quiz, html: { multipart: true } do |f| %>
      <div class="question-card1">
        <%= f.label "Give your notes", class: "question-text-area-picture" %>
        <div class="file-input-container">
          <%= f.file_field :image, as: :file, input_html: { placeholder: "Give your notes" }, data: { quiz_form_target: "imageInput", action: "change->quiz-form#toggleInputs" } %>
        </div>
      </div>

      <div class="or-divider">OR</div>

      <div class="question-card1">
        <%= f.label "", class: "question-text-area-label" %>
        <%= f.text_area :text, placeholder: "Type the topic here...", class: "question-text-area custom-placeholder input-wrapper", data: { quiz_form_target: "textInput", action: "change->quiz-form#toggleInputs" } %>
      </div>


      <div class="centered-button">
        <%= f.submit "Create Quiz!", data: { action: "click->loading#show" }, class: "wide-button green-button button-wrapper" %>
      </div>


    <% end %>
  </div>
</div>
<%# help %>
