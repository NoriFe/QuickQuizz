<div class="page-container spinning-wheel-container">
  <h2 class="page-title-s my-2">Create New Quiz</h2>
  <div class="quiz-form">
    <%= simple_form_for @quiz, html: { multipart: true } do |f| %>
      <div class="card-basic">
        <%= f.label "Photo", class: "input-card-title" %>
        <div class="file-input-container">
          <%= f.file_field :image, as: :file, input_html: { placeholder: "Give your notes" }, data: { quiz_form_target: "imageInput", action: "change->quiz-form#toggleInputs" } %>
        </div>
        <div class="input-description">
          <div class="input-field-text small-text">Add a photo of your notes</div>
          <div class="input-field-text xs-text">pdf Â· jpeg</div>
        </div>
      </div>

      <div class="or-divider">OR</div>

      <div class="card-basic p-3">
        <%= f.label "Text", class: "input-card-title" %>
        <%= f.text_area :text, placeholder: "Paste your notes here...", class: "input-text-area", data: { quiz_form_target: "textInput", action: "change->quiz-form#toggleInputs" } %>
      </div>

      <div data-controller="loading" class="mt-5">
        <div class="new-quiz-submit" >
          <%= f.submit "Create Quizz!", data: { action: "click->loading#show", loading_target: "loadingPopup" }, class: "new-quiz-submit-button wide-button green-button centered-button boxbutton" %>
          <%= render "shared/loading-popup" %>
        </div>
      </div>


    <% end %>
  </div>
</div>
